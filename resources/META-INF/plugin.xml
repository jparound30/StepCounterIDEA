  <depends>com.intellij.modules.vcs</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <project-components>
    <component>
      <implementation-class>com.github.jparound30.idea.plugin.stepcounter.StepCounterProjectComponent</implementation-class>
    </component>
  </project-components>

</idea-plugin>